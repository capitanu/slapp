<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="8dp"
    android:maxWidth="240dp"
    app:cardCornerRadius="7dp"
    android:id="@+id/messageCardSent"
    android:layout_marginBottom="2dp"
    android:backgroundTint="@color/messageSent"
    >
    <TextView
        android:id="@+id/received_text_message_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="HELLO"
        android:layout_marginHorizontal="4dp"
        android:textSize="20sp"
        android:layout_marginVertical="3dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/received_text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/messageCardSent"
        app:layout_constraintRight_toLeftOf="@+id/messageCardSent" />


</androidx.constraintlayout.widget.ConstraintLayout>